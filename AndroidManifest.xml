<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.fosdem"
      android:versionCode="1"
      android:versionName="1.0">
      <uses-permission android:name="android.permission.INTERNET" />
      
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true">
        <uses-library android:name="android.test.runner"/>
        <activity android:name="org.fosdem.schedules.Main"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.fosdem.schedules.DisplayEvent">
            <intent-filter>
                <action android:name="org.fosdem.schedules.DISPLAY_EVENT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
		<activity android:name="org.fosdem.schedules.RoomListActivity"></activity>
    </application>
    <uses-sdk  android:targetSdkVersion="4" android:minSdkVersion="4"/>
	<instrumentation android:name="android.test.InstrumentationTestRunner"
    android:targetPackage="org.fosdem"
    android:label="FOSDEM JUnit" />
</manifest> 