<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/LinearLayout01" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" 
	android:orientation="vertical" 
	android:background="#fff" android:padding="4px">
	<TextView 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:text="title" 
		android:id="@+id/event_title" android:textColor="#333" android:textSize="12pt" android:textStyle="bold">
	</TextView>
	<LinearLayout 	
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"> 
		<TextView 
			android:text="event_track" 
			android:id="@+id/event_track" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" android:textColor="#000" android:layout_marginRight="4px">
		</TextView>
		<TextView 
			android:text="event_speaker" 
			android:id="@+id/event_speaker" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" android:textColor="#000" android:layout_marginRight="4px">
		</TextView>
		<TextView 
			android:text="event_room" 
			android:id="@+id/event_room" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" android:textColor="#000" android:layout_marginRight="4px">
		</TextView>
	</LinearLayout>
	<TextView 
		android:text="event_description" 
		android:id="@+id/event_description" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" android:textColor="#000">
	</TextView>
</LinearLayout>
